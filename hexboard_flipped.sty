\newcommand{\hexreducingnoborder}[2]{
    % Place the hex cells.
    \foreach \Ib in {1,...,#2}{
        \pgfmathsetmacro\Iaend{#1+1-\Ib}
        \foreach \Ia in {1,...,\Iaend}{
            \hexcell{\Ia}{\Ib}
        }

    }
}

\newcommand{\hexbottomsubborder}[2]{%
